{
    "files.associations": {
        "profile": "shellscript",
        "environment": "shellscript",
        "local.conf": "xml",
        "servers": "xml"
    },

    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },

    "editor.renderFinalNewline": true,
    "editor.trimAutoWhitespace": true,
    "editor.tabSize": 2,

    "files.encoding": "utf8",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
}
